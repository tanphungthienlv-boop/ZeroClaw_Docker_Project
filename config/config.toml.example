# ZeroClaw Configuration (TOML)
# Auto-generated by Lão Hạc

default_provider = "custom:https://generativelanguage.googleapis.com/v1beta/openai"

[memory]
backend = "sqlite"
auto_save = true

[gateway]
require_pairing = false
allow_public_bind = true

[channels.telegram]
bot_token = "YOUR_TELEGRAM_BOT_TOKEN_HERE"
allowed_users = ["*"]
dm_policy = "open"

# Cấu hình Provider AntiGravity (Custom OpenAI-Compatible)
[providers.custom]
api_base = "https://generativelanguage.googleapis.com/v1beta/openai" 
# Lưu ý: Cần điền API Key hoặc Token OAuth vào đây khi chạy
# api_key = "..." 

# Cấu hình Groq (Backup)
[providers.groq]
api_key = "YOUR_GROQ_API_KEY_HERE"

[secrets]
encrypt = false
